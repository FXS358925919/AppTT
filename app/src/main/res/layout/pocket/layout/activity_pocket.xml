<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="500积分"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/pocket_button_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换" />

        <Button
            android:id="@+id/pocket_button_withdrawal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Integral_acquire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pocket_sign_acquire"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+125\n签到获得" />

        <TextView
            android:id="@+id/pocket_reward_acquire"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+1000\n打赏获得" />

        <TextView
            android:id="@+id/pocket_chat_acquire"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+2000\n聊天获得" />

        <TextView
            android:id="@+id/pocket_share_acquire"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+50\n分享获得" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pocket_vip_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/pocket_image_vip"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/vip2x" />

        <TextView
            android:id="@+id/pocket_text_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:text="会员"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pocket_recharge_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/pocket_image_recharge"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/recharge3x" />

        <TextView
            android:id="@+id/pocket_text_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:text="充值"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pocket_gift_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/pocket_image_gift"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/gift3x" />

        <TextView
            android:id="@+id/pocket_text_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:text="礼品"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pocket_bill_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/pocket_image_bill"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/gift3x" />

        <TextView
            android:id="@+id/pocket_text_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:text="账单"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
