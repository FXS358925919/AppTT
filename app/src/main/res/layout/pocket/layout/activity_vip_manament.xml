<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_vip_manament"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.tt.pocket.VipManamentActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pocket_vip_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:src="@drawable/profile"
        />
    <TextView
        android:id="@+id/pocket_vip_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="陈东阳"
        android:layout_gravity="center"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/pocket_vip_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员2017—09—03到期"
            android:layout_gravity="center"
            android:textSize="10sp"
            />
        <Button
            android:id="@+id/pocket_renew_vip"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="续费"
            android:textSize="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pocket_vip_privilege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pocket_"
            android:text="XX特权"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/pocket_vip_p2"
            android:text="XX特权"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/pocket_vip_p3"
            android:text="XX特权"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/pocket_vip_p4"
            android:text="XX特权"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp" />

    </LinearLayout>
</LinearLayout>
