<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_exchange"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="5000"
        android:textSize="40dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="当前积分"
        android:textSize="15dp" />
    -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="充值积分(一元可以兑换1000积分)"
        android:textColor="#E83667"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/pocket_edit_recharge"
        android:layout_width="match_parent"
        android:hint="输入您充值的积分数量"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/pocket_button_recharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E83667"
        android:textColor="@color/white"
        android:text="充值积分"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="充值诚意分(一元可以兑换1500充值诚意分)"
        android:textColor="#E83667"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/pocket_edit_recharge_sincerity"
        android:layout_width="match_parent"
        android:hint="输入您充值的诚意分数量"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/pocket_button_recharge_sincerity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E83667"
        android:textColor="@color/white"
        android:text="充值诚意分"
        />
</android.support.v7.widget.LinearLayoutCompat>
