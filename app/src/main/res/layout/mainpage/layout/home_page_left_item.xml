<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--九宫格分为两个整体线性布局-->
    <!--第一个线性布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <!--第一张大图-->
                <ImageView
                    android:id="@+id/nine_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/image_buttom_bg">
                    <TextView
                        android:id="@+id/nine_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:paddingLeft="2dp"
                        android:textColor="@color/white"
                        android:text="波波"/>
                    <TextView
                        android:id="@+id/nine_relationship1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:paddingLeft="2dp"
                        android:textColor="@color/color_of_AA"
                        android:text="AA"/>
                    <TextView
                        android:id="@+id/nine_city1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:paddingRight="5dp"
                        android:textColor="@color/white"
                        android:text="大连"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1">
                    <!--第二张图-->
                    <ImageView
                        android:id="@+id/nine_img2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/image_buttom_bg">
                        <TextView
                            android:id="@+id/nine_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:paddingLeft="2dp"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="波波"/>
                        <TextView
                            android:id="@+id/nine_relationship2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:paddingLeft="2dp"
                            android:textColor="@color/color_of_AA"
                            android:textSize="12dp"
                            android:text="AA"/>
                        <TextView
                            android:id="@+id/nine_city2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:paddingRight="5dp"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="大连"/>

                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1">
                    <!--第三张图-->
                    <ImageView
                        android:id="@+id/nine_img3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/image_buttom_bg">
                        <TextView
                            android:id="@+id/nine_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:paddingLeft="2dp"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="波波"/>
                        <TextView
                            android:id="@+id/nine_relationship3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:paddingLeft="2dp"
                            android:textColor="@color/color_of_AA"
                            android:textSize="12dp"
                            android:text="AA"/>
                        <TextView
                            android:id="@+id/nine_city3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:paddingRight="5dp"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="大连"/>

                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <!--第二个线性布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <!--第四张图-->
            <ImageView
                android:id="@+id/nine_img4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/image_buttom_bg">

                <TextView
                    android:id="@+id/nine_name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:paddingLeft="2dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:text="波波"/>
                <TextView
                    android:id="@+id/nine_relationship4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:paddingLeft="2dp"
                    android:textColor="@color/color_of_AA"
                    android:textSize="12dp"
                    android:text="AA"/>
                <TextView
                    android:id="@+id/nine_city4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:text="大连"/>

            </RelativeLayout>



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:layout_weight="1">
            <!--第五张图-->
            <ImageView
                android:id="@+id/nine_img5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/image_buttom_bg">
                <TextView
                    android:id="@+id/nine_name5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:paddingLeft="2dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:text="波波"/>
                <TextView
                    android:id="@+id/nine_relationship5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:paddingLeft="2dp"
                    android:textColor="@color/color_of_AA"
                    android:textSize="12dp"
                    android:text="AA"/>
                <TextView
                    android:id="@+id/nine_city5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:text="大连"/>

            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:layout_weight="1">
            <!--第六张图-->
            <ImageView
                android:id="@+id/nine_img6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/image_buttom_bg">
                <TextView
                    android:id="@+id/nine_name6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:paddingLeft="2dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:text="波波"/>
                <TextView
                    android:id="@+id/nine_relationship6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:paddingLeft="2dp"
                    android:textColor="@color/color_of_AA"
                    android:textSize="12dp"
                    android:text="AA"/>
                <TextView
                    android:id="@+id/nine_city6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:paddingRight="2dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:text="大连"/>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
