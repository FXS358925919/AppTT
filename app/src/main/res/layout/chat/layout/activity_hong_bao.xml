<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hong_bao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.TT.SincereAgree.chat.HongBaoActivity">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/redpacketselect"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="诚意分红包"
            android:checked="true"
            android:id="@+id/sincerity_redpacket"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分红包"
            android:id="@+id/integral_redpacket"/>
    </RadioGroup>
    <EditText
        android:id="@+id/chat_hongbao_num"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:hint="输入金额"
        />
    <EditText
        android:id="@+id/chat_hongbao_text"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="留言"
        />
    <Button
        android:id="@+id/chat_send_hongbao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        />
</LinearLayout>
